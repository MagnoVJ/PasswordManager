<UserControl x:Class="PassManager.custom.PasswordItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PassManager.custom"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="0000" Name="tb_passIDCod" Width="90" TextAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0"/>
            <Label Content="Sistema X" Name="lb_passSysName" Width="200" />
            <TextBox Name="tbx_passPassword" Width="200" Visibility ="Collapsed"/>
            <PasswordBox Name="passb_senha" Width="200" Visibility="Visible"/>
            <!--<Button  Content="SH" Name="btn_showHide" Width="20" Margin="10,0,0,0"/>-->
            <CheckBox Name="ChkBox" Content="Mostar Senha" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"  Margin="10,0,0,0"/>
            <Button Content="Copiar" Name="btn_Copy" Width="40" Margin="10,0,0,0" Click="btn_Copy_Click"/>
            <Button Content="Salvar" Name="btn_Save" Width="40" Margin="10,0,0,0" Click="btn_Save_Click"/>
        </StackPanel>
            
    </Grid>
</UserControl>
