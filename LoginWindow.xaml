<Window x:Class="PassManager.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PassManager"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Vertical">
            <Label Content="Usuário" HorizontalAlignment="Center"/>
            <TextBox Name="usr_txt" Width="100" Margin="0,0,0,20"></TextBox>
            <Label Content="Senha" HorizontalAlignment="Center"/>
            <PasswordBox Name="pass_txt" Width="100" Margin="0,0,0,50"></PasswordBox>
            <Button Content="OK" Click="Button_Click"/>
        </StackPanel>
        

    </Grid>
</Window>
