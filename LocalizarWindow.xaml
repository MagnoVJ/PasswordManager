<Window x:Class="PassManager.LocalizarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PassManager"
        mc:Ignorable="d"
        Title="LocalizarWindow" Height="141" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Grid>

                <StackPanel Orientation="Vertical" >
                    <Label Content="Código:" HorizontalAlignment="Center"/>
                    <TextBox x:Name="txtb_codigo" Width="100"/>
                </StackPanel>
            
            </Grid>
            
            <Button Name="btn_Conf"  Content="Confirmar"  Click="btn_Conf_Click" Margin="200, 15, 200, 10"/>
                
            
        </StackPanel>
    </Grid>
</Window>
